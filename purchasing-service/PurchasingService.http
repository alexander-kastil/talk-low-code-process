@host = http://localhost:5151
@testEmail = food.buyer@example.com

### Sample: Butter Chicken offer
POST {{host}}/api/purchasing/offer
Content-Type: application/json

{
  "supplierId": 1,
  "requestId": "REQ-{{$guid}}",
  "offerDetails": [
    {
      "productName": "Butter Chicken",
      "requestedAmount": 25
    }
  ]
}

### Sample: Mixed deli offer
POST {{host}}/api/purchasing/offer
Content-Type: application/json

{
  "supplierId": 2,
  "requestId": "REQ-{{$randomInt 1000 9999}}",
  "offerDetails": [
    {
      "productName": "Blini with Salmon",
      "requestedAmount": 12
    },
    {
      "productName": "Falafel",
      "requestedAmount": 40
    }
  ]
}

